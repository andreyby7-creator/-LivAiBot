{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "*.tsbuildinfo"],
      "inputs": ["src/**", "package.json", "tsconfig*.json", "tsup.config.ts"]
    },
    "build:js": {
      "dependsOn": [],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "package.json", "tsconfig*.json", "tsup.config.ts"]
    },
    "build:watch": {
      "dependsOn": [],
      "outputs": ["dist/**"],
      "cache": false
    },
    "lint:canary": {
      "inputs": ["src/**", "**/*.config.*", ".eslintrc*"]
    },
    "lint:canary:fix": {
      "inputs": ["src/**", "**/*.config.*", ".eslintrc*"]
    },
    "type-check": {
      "inputs": ["src/**", "tsconfig*.json"]
    },
    "test": {
      "inputs": ["src/**", "tests/**", "**/*.config.*"],
      "outputs": ["coverage/**"]
    },
    "test:ci": {
      "inputs": ["src/**", "tests/**", "**/*.config.*"],
      "outputs": ["coverage/**"]
    },
    "test:ui": {
      "inputs": ["src/**", "tests/**", "**/*.config.*"],
      "cache": false
    },
    "test:coverage:html": {
      "inputs": ["src/**", "tests/**", "**/*.config.*"],
      "outputs": ["coverage/**"]
    },
    "test:coverage:watch": {
      "inputs": ["src/**", "tests/**", "**/*.config.*"],
      "cache": false
    },
    "clean": {},
    "dev": {
      "dependsOn": [],
      "outputs": ["dist/**"],
      "cache": false
    }
  },
  "globalDependencies": [
    "package.json",
    "tsconfig.json",
    "turbo.json"
  ]
}
