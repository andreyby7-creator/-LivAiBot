{
  "name": "LivAiBot-monorepo",
  "version": "1.0.0",
  "description": "LivAiBot Monorepo ESLint Configuration",
  "type": "module",
  "private": true,
  "prettier": "./config/prettier/prettier.config.js",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "lint": "cross-env ESLINT_MODE=dev eslint . --ext .ts,.tsx,.js,.jsx --config eslint.config.mjs --max-warnings 50",
    "lint:dev": "cross-env ESLINT_MODE=dev eslint . --ext .ts,.tsx,.js,.jsx --config eslint.config.mjs --max-warnings 50",
    "lint:canary": "cross-env ESLINT_MODE=canary eslint . --ext .ts,.tsx,.js,.jsx --config eslint.config.mjs --max-warnings 0",
    "lint:fix": "cross-env ESLINT_MODE=dev eslint . --ext .ts,.tsx,.js,.jsx --config eslint.config.mjs --fix",
    "lint:package": "cross-env ESLINT_MODE=dev eslint packages/$PACKAGE_NAME --ext .ts,.tsx,.js,.jsx --config eslint.config.mjs --max-warnings 10",
    "lint:test": "cd config/eslint && node test/run-all-tests.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "architecture:validate": "echo 'Architecture validation not implemented yet'",
    "verify:infra": "echo 'Infrastructure verification not implemented yet'"
  },
  "devDependencies": {
    "@effect/eslint-plugin": "^0.3.2",
    "@next/eslint-plugin-next": "^16.0.10",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-boundaries": "^5.3.1",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-functional": "9.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-perf": "^3.3.3",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-security-node": "^1.1.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-testing-library": "^7.14.0",
    "eslint-plugin-tsdoc": "^0.5.0",
    "fast-glob": "^3.3.3",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
