    "db:migrate": "cd services/auth-service && make migrate && cd ../bots-service && make migrate && cd ../conversations-service && make migrate",
    "db:reset": "echo 'ðŸ”„ Ð¡Ð±Ñ€Ð¾Ñ Ð‘Ð”...' && docker compose -f infrastructure/compose/docker-compose.yml down -v && docker compose -f infrastructure/compose/docker-compose.yml up -d && sleep 10 && pnpm run db:migrate",
    "docker:status": "./scripts/docker-helper.sh status",
    "docker:logs": "./scripts/docker-helper.sh logs",
    "docker:shell": "./scripts/docker-helper.sh shell",
    "docker:health": "./scripts/docker-helper.sh health",
    "docker:clean": "./scripts/docker-helper.sh clean",
    "type-check": "TURBO_FORCE=true TURBO_REMOTE_CACHE_DISABLED=true TURBO_CACHE_DIR=./node_modules/.cache/turbo turbo run type-check",
    "type-check:local": "npx tsc --noEmit",
    "type-check:skip-lib": "npx tsc --noEmit --skipLibCheck",
    "tsc:check": "npx tsc --noEmit --skipLibCheck | cat",
    "type-check:eslint": "npx tsc --noEmit --project config/tsconfig/tsconfig.eslint.json",
    "type-check:ci": "TURBO_FORCE=true TURBO_REMOTE_CACHE_DISABLED=true turbo run type-check",
    "clean": "TURBO_FORCE=true TURBO_REMOTE_CACHE_DISABLED=true TURBO_CACHE_DIR=./node_modules/.cache/turbo turbo run clean",
    "clean:local": "node scripts/clean-local.js",
    "clean:eslint-cache": "rm -rf node_modules/.cache/eslint .eslintcache",
    "lint": "ESLINT_MODE=dev eslint --config eslint.config.mjs",
    "lint:dev": "ESLINT_MODE=dev eslint --config eslint.config.mjs",
    "lint:canary": "pnpm run clean:eslint-cache && ESLINT_MODE=canary node -e \"const fs = require('fs'); const dirs = ['packages', 'config', 'scripts', 'apps', 'e2e'].filter(d => fs.existsSync(d) && fs.readdirSync(d).some(f => { try { return fs.statSync(d + '/' + f).isFile() && ['ts', 'tsx', 'js', 'jsx'].includes(f.split('.').pop()); } catch { return false; } })); console.log('ðŸ” ÐÐ°Ð¹Ð´ÐµÐ½Ñ‹ Ð´Ð¸Ñ€ÐµÐºÑ‚Ð¾Ñ€Ð¸Ð¸ Ñ Ð¸ÑÑ…Ð¾Ð´Ð½Ñ‹Ð¼ ÐºÐ¾Ð´Ð¾Ð¼:', dirs.join(', ')); process.exit(0);\" && ESLINT_MODE=canary eslint --config eslint.config.mjs packages/ config/ scripts/ apps/ e2e/ --format=pretty --max-warnings 0",
    "lint:canary:local": "ESLINT_MODE=canary npx eslint --config eslint.config.mjs packages/core-contracts/src/",
    "lint:canary:ci": "pnpm run clean:eslint-cache && ESLINT_MODE=canary eslint --config eslint.config.mjs packages/ config/ scripts/ apps/ e2e/",
    "lint:fix": "pnpm run clean:eslint-cache && ESLINT_MODE=dev eslint --config eslint.config.mjs --fix",
    "lint:canary:fix": "pnpm run clean:eslint-cache && ESLINT_MODE=canary eslint --config eslint.config.mjs --fix",
    "format": "dprint fmt",
    "format:check": "dprint check",
    "quality": "pnpm run type-check && pnpm run lint:canary",
    "quality:local": "pnpm run type-check:local && pnpm run lint:canary:local",
    "pre-commit": "pnpm run quality && pnpm run format:check && pnpm run test && pnpm run check:circular-deps && pnpm run deps:unused",
    "type-coverage": "type-coverage packages --detail",
    "quality:ci": "node config/eslint/utils/check-zones.mjs && node config/eslint/utils/validate-zones.mjs && pnpm run type-check:ci && pnpm run lint:canary:ci",
    "ci": "pnpm run quality:ci && pnpm run test:ci",
    "check:circular-deps": "node scripts/check-circular-deps-monorepo.js",
    "deps:unused": "node scripts/check-deps-unused.js",
    "check:dependency-policy": "node scripts/check-dependency-policy.js",
    "test:ui": "pnpm run -r test:ui",
    "test:coverage:html": "pnpm run -r test:coverage:html",
    "test:coverage:watch": "pnpm run -r test:coverage:watch",
    "coverage:open": "python3 -m webbrowser file://$(pwd)/packages/core-contracts/coverage/index.html 2>/dev/null || echo 'HTML report: packages/core-contracts/coverage/index.html'",
    "coverage:check": "node scripts/coverage-check.js",
    "coverage:file": "node scripts/coverage-file.js",
    "analyze:import-metrics": "node scripts/analyze-import-graph-metrics.js",
    "analyze:bundles": "node scripts/analyze-bundles.js --quiet",
    "analyze:bundles:size-only": "node scripts/analyze-bundles.js --size-only --quiet",
    "analyze:bundles:graph-only": "node scripts/analyze-bundles.js --graph-only --quiet",
    "analyze:bundles:compare-main": "node scripts/analyze-bundles.js --compare=main --quiet",
    "analyze:bundles:compare-none": "node scripts/analyze-bundles.js --compare=none --quiet",
    "analyze:bundles:verbose": "node scripts/analyze-bundles.js",
    "docs:generate": "node scripts/generate-docs.js",
    "release:prep": "pnpm run test && pnpm run quality && pnpm run changelog",
    "changelog": "node scripts/generate-changelog.js",
    "security:snyk": "node scripts/security-check.js",
    "dev:inspect": "NODE_OPTIONS='--inspect' pnpm run dev",
    "generate:openapi": "PYTHONDONTWRITEBYTECODE=1 python3 scripts/generate-openapi-snapshots.py",
    "generate:zod": "node scripts/generate-zod-schemas.mjs",
    "generate:contracts": "pnpm run generate:openapi && pnpm run generate:zod",
    "check:contracts": "git diff --exit-code || (echo \"\\n[contracts] contract drift detected\" && exit 1)"
