# LivAI Environment Variables
# Копируйте этот файл в .env.local и заполните реальными значениями

# ==================================================
# БАЗОВЫЕ НАСТРОЙКИ
# ==================================================

# Среда выполнения
NODE_ENV=development

# ==================================================
# БАЗЫ ДАННЫХ И КЭШ
# ==================================================

# PostgreSQL база данных
DATABASE_URL=postgresql://user:password@localhost:5432/livai

# Redis для кэширования и сессий
REDIS_URL=redis://localhost:6379

# ==================================================
# АУТЕНТИФИКАЦИЯ И БЕЗОПАСНОСТЬ
# ==================================================

# JWT секреты (генерируйте новые для продакшена)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_REFRESH_EXPIRES_IN=7d

# ==================================================
# AI СЕРВИСЫ
# ==================================================

# OpenAI API
OPENAI_API_KEY=sk-your-openai-key

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your-google-ai-key

# ==================================================
# МОНИТОРИНГ И АНАЛИТИКА
# ==================================================

# Sentry для ошибок
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# PostHog для аналитики
POSTHOG_API_KEY=your-posthog-key

# ==================================================
# ОГРАНИЧЕНИЯ И ЗАЩИТА
# ==================================================

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ==================================================
# КОНФИГУРАЦИЯ ПРИЛОЖЕНИЙ
# ==================================================

# API Gateway
API_BASE_URL=http://localhost:3001

# Web приложение
WEB_BASE_URL=http://localhost:3000

# Admin панель
ADMIN_BASE_URL=http://localhost:3002

# ==================================================
# ПЕРЕМЕННЫЕ ДЛЯ КЛИЕНТА (VITE_)
# ==================================================

# API URL для клиентских запросов
VITE_API_URL=http://localhost:3001
VITE_APP_ENV=development

# Тип приложения (web/admin/mobile) - для Vite
VITE_APP=web

# ==================================================
# ПЕРЕМЕННЫЕ ДЛЯ NEXT.JS (NEXT_PUBLIC_)
# ==================================================

NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_ENV=development

# ==================================================
# ДОПОЛНИТЕЛЬНЫЕ ПЕРЕМЕННЫЕ ДЛЯ AI
# ==================================================

# Максимальное количество токенов для AI ответов
AI_MAX_TOKENS=4096

# Таймаут для AI запросов (мс)
AI_REQUEST_TIMEOUT=30000

# Максимальный размер контекста чата
CHAT_MAX_CONTEXT_LENGTH=10000

# ==================================================
# ПЕРЕМЕННЫЕ ДЛЯ ТЕСТИРОВАНИЯ
# ==================================================

# Тестовая база данных
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/livai_test

# Тестовый Redis
TEST_REDIS_URL=redis://localhost:6380

# Флаг CI для автоматических тестов
CI=false
