{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "outDir": "dist/esm",
    "composite": true,
    "incremental": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": false,
    "declaration": true,
    "declarationDir": "dist/esm",
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "allowJs": false,
    "checkJs": false,
    "jsx": "react-jsx",
    "strict": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "test/**/*"
  ],
  "references": [
    { "path": "../core-contracts/tsconfig.build.json" },
    { "path": "../ui-core/tsconfig.build.json" }
  ]
}
