{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "outDir": "dist/esm",
    "composite": false,
    "incremental": true,
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": false,
    "declaration": true,
    "declarationMap": false, // Отключаем .d.ts.map для скорости
    "emitDeclarationOnly": false,
    "allowJs": false,
    "checkJs": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/**/*.spec.ts", "test/**/*"]
}
