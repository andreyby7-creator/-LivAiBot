{
  "name": "@livai/ui-shared",
  "version": "1.0.0",
  "description": "Shared UI components and utilities",
  "repository": {
    "type": "git",
    "url": "https://github.com/livai/livai.git",
    "directory": "packages/ui-shared"
  },
  "bugs": {
    "url": "https://github.com/livai/livai/issues"
  },
  "homepage": "https://github.com/livai/livai/tree/main/packages/ui-shared#readme",
  "main": "./dist/esm/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": "24.12.0",
    "pnpm": "10.28.2"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:dev": "tsup --sourcemap --no-clean",
    "build:js": "tsup",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "lint": "pnpm --filter @livai/ui-shared lint",
    "type-check": "tsc --noEmit",
    "test": "NODE_OPTIONS='--no-warnings' vitest",
    "test:watch": "vitest --watch",
    "test:ui": "NODE_OPTIONS='--no-warnings' vitest --ui",
    "test:coverage": "NODE_OPTIONS='--no-warnings' vitest run --coverage",
    "test:coverage:html": "NODE_OPTIONS='--no-warnings' vitest run --coverage --coverage.reporter=html",
    "test:coverage:watch": "NODE_OPTIONS='--no-warnings' vitest --coverage --watch",
    "test:ci": "NODE_OPTIONS='--no-warnings' vitest run --coverage --passWithNoTests=false",
    "clean": "rm -rf dist *.tsbuildinfo .eslintcache",
    "lint:dev": "pnpm --filter @livai/ui-shared lint",
    "lint:canary": "ESLINT_MODE=canary eslint --config ../../eslint.config.mjs src",
    "lint:canary:fix": "ESLINT_MODE=canary eslint --config ../../eslint.config.mjs src --fix",
    "check:deps": "cd ../.. && node scripts/check-circular-deps-monorepo.js",
    "ci:check": "pnpm run type-check && pnpm run lint && pnpm run test:ci && pnpm run check:deps",
    "lint:fix": "pnpm --filter @livai/ui-shared lint:fix",
    "lint:ci": "ESLINT_MODE=canary pnpm --filter @livai/ui-shared lint --max-warnings 0"
  },
  "keywords": [
    "typescript",
    "fp",
    "effect",
    "domain-driven-design",
    "contracts",
    "core",
    "foundation",
    "ui",
    "components",
    "react"
  ],
  "peerDependencies": {
    "react": "19.2.3",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "16.3.2",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "9.39.2",
    "jsdom": "28.1.0",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "tags": [
    "node",
    "critical",
    "ui"
  ],
  "dependencies": {
    "react-hook-form": "^7.70.0",
    "zod": "^4.3.6"
  }
}
