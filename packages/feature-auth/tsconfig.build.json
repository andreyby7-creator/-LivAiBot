{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "outDir": "dist/esm",
    "composite": true,
    "incremental": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": false,
    "declaration": true,
    "declarationDir": "dist/esm",
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "allowJs": false,
    "checkJs": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/**/*.spec.ts", "test/**/*"],
  "references": [
    { "path": "../domains/tsconfig.build.json" },
    { "path": "../core/tsconfig.build.json" },
    { "path": "../app/tsconfig.build.json" },
    { "path": "../core-contracts/tsconfig.build.json" }
  ]
}
