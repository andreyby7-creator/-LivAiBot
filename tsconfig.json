{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@livai/core": ["packages/core/src/index.ts"],
      "@livai/core/*": ["packages/core/src/*/index.ts"],
      "@livai/core-contracts": ["packages/core-contracts/src/index.ts"],
      "@livai/core-contracts/*": ["packages/core-contracts/src/*/index.ts"],
      "@livai/events": ["packages/events/index.ts"],
      "@livai/events/*": ["packages/events/*/index.ts"],
      "@livai/feature-auth": ["packages/feature-auth/src/index.ts"],
      "@livai/feature-auth/*": ["packages/feature-auth/src/*/index.ts"],
      "@livai/feature-bots": ["packages/feature-bots/src/index.ts"],
      "@livai/feature-bots/*": ["packages/feature-bots/src/*/index.ts"],
      "@livai/feature-chat": ["packages/feature-chat/src/index.ts"],
      "@livai/feature-chat/*": ["packages/feature-chat/src/*/index.ts"],
      "@livai/feature-voice": ["packages/feature-voice/src/index.ts"],
      "@livai/feature-voice/*": ["packages/feature-voice/src/*/index.ts"],
      "@livai/observability": ["packages/observability/src/index.ts"],
      "@livai/observability/*": ["packages/observability/src/*/index.ts"],
      "@livai/ui-core": ["packages/ui-core/index.ts"],
      "@livai/ui-core/*": ["packages/ui-core/*/index.ts"],
      "@livai/ui-features": ["packages/ui-features/index.ts"],
      "@livai/ui-features/*": ["packages/ui-features/*/index.ts"],
      "@livai/ui-shared": ["packages/ui-shared/index.ts"],
      "@livai/ui-shared/*": ["packages/ui-shared/*/index.ts"],
      "@livai/app": ["packages/app/src/index.ts"],
      "@livai/app/*": ["packages/app/src/*/index.ts"],
      "@/*": ["apps/*/src"]
    },
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": false,
    "allowJs": true
  },
  "include": [
    "apps/**/src/**/*",
    "apps/shared-ui/src/**/*",
    "api/src/**/*",
    "core-contracts/src/**/*",
    "config/playwright/**/*.ts",
    "config/testing/**/*.ts",
    "e2e/**/*.ts",
    "apps/web/*.config.ts",
    "apps/web/*.setup.ts",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "**/coverage/**",
    "**/test-results/**",
    "**/tsup.config.*"
  ]
}
