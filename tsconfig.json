{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@livai/core-contracts": ["core-contracts/src/index.ts"],
      "@livai/core-contracts/*": ["core-contracts/src/*/index.ts"],
      "@livai/domains/*": ["packages/domains/*/index.ts"],
      "@livai/infrastructure/*": ["packages/infrastructure-*/index.ts"],
      "@livai/fp/*": ["packages/fp/*/index.ts"],
      "@livai/application-core": ["packages/application-core/index.ts"],
      "@livai/data": ["packages/data/index.ts"],
      "@livai/feature-flags": ["packages/feature-flags/index.ts"],
      "@livai/read-models/*": ["packages/read-models/*/index.ts"],
      "@livai/sdk/*": ["packages/sdk/*/index.ts"],
      "@livai/security": ["packages/security/index.ts"],
      "@livai/tools/*": ["packages/tools/*/index.ts"],
      "@livai/ui": ["packages/ui/index.ts"],
      "@livai/validation": ["packages/validation/index.ts"],
      "@/*": ["apps/*/src"]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": false
  },
  "include": [
    "apps/**/src/**/*",
    "apps/shared-ui/src/**/*",
    "api/src/**/*",
    "core-contracts/src/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "**/coverage/**",
    "**/test-results/**",
    "**/*.config.*",
    "**/*.setup.*",
    "**/tsup.config.*"
  ]
}
