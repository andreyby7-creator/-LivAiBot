{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-jsx",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@livai/core": ["../../packages/core/src/index.ts"],
      "@livai/core/*": ["../../packages/core/src/*"],
      "@livai/core-contracts": ["../../packages/core-contracts/src/index.ts"],
      "@livai/core-contracts/validation/zod": [
        "../../packages/core-contracts/src/validation/zod/index.ts"
      ],
      "@livai/core-contracts/*": ["../../packages/core-contracts/src/*"],
      "@livai/events": ["../../packages/events/index.ts"],
      "@livai/events/*": ["../../packages/events/*"],
      "@livai/feature-auth": ["../../packages/feature-auth/src/index.ts"],
      "@livai/feature-auth/*": ["../../packages/feature-auth/src/*"],
      "@livai/feature-bots": ["../../packages/feature-bots/src/index.ts"],
      "@livai/feature-bots/*": ["../../packages/feature-bots/src/*"],
      "@livai/feature-chat": ["../../packages/feature-chat/src/index.ts"],
      "@livai/feature-chat/*": ["../../packages/feature-chat/src/*"],
      "@livai/feature-voice": ["../../packages/feature-voice/src/index.ts"],
      "@livai/feature-voice/*": ["../../packages/feature-voice/src/*"],
      "@livai/observability": ["../../packages/observability/src/index.ts"],
      "@livai/observability/*": ["../../packages/observability/src/*"],
      "@livai/ui-core": ["../../packages/ui-core/index.ts"],
      "@livai/ui-core/*": ["../../packages/ui-core/*"],
      "@livai/ui-features": ["../../packages/ui-features/index.ts"],
      "@livai/ui-features/*": ["../../packages/ui-features/*"],
      "@livai/ui-shared": ["../../packages/ui-shared/index.ts"],
      "@livai/ui-shared/*": ["../../packages/ui-shared/*"],
      "@livai/app": ["../../packages/app/src/index.ts"],
      "@livai/app/*": ["../../packages/app/src/*"],
      "@livai/vitest/*": ["../config/vitest/*"],
      "@/*": ["../apps/*/src"]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": false,
    "verbatimModuleSyntax": true
  }
}
