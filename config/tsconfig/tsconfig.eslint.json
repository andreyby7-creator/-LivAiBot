{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["node"],
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "../eslint/**/*.mjs",
    "../eslint/**/*.ts",
    "../eslint/**/*.js",
    "../eslint/**/*.jsx"
  ],
  "exclude": [
    "../../**/node_modules/**",
    "../../**/.next/**",
    "../../**/dist/**",
    "../../**/build/**",
    "../../apps/**",
    "../../packages/**",
    "../../**/*.test.*",
    "../../**/*.spec.*"
  ]
}
